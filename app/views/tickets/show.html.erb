<div id="ticket">
	<div id="author">Created by <%= @ticket.user.email %></div>
	<% if @ticket.assets.present? %>
	  <h3>Attached Files</h3>
	  <div class="assets">
	    <% @ticket.assets.each do |asset| %>
		    <p>
		      # <% #binding.pry %>
		      <%= link_to File.basename(@ticket.asset.path), @ticket.asset.url %>
		    </p>
		    <p><small><%= number_to_human_size(@ticket.asset.size) %></small></p>
	    <% end %>
	  </div>
	<% end %>
	<h2><%= @ticket.title %></h2>
	<%= simple_format(@ticket.description) %>
</div>

<% authorized?("edit tickets", @project) do %>
  <%= link_to "Edit Ticket", [:edit, @project, @ticket] %>
<% end %>
<% authorized?("delete tickets", @project) do %>
  <%= link_to "Delete Ticket", [@project, @ticket], method: :delete, data: { confirm: "Are you sure about this?" } %>
<% end %>